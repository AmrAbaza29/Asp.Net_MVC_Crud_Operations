@using Tickets.mvc;
@using Tickets.BL;
@using Tickets.DAL;
@model TicketAddVM;
@{
    List<SelectListItem> developers = ViewData[Constants.Developers] as List<SelectListItem> ?? new();
    List<SelectListItem> departments = ViewData[Constants.Departments] as List<SelectListItem> ?? new();
}
<h2 class="text-center p-3 bg-primary bg-opacity-25 border-3 rounded-3">Reserve A Ticket</h2>
<form asp-action="Add" method="post">
    <div class="form-group row mb-3">
        <label asp-for="CreatedDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="CreatedDate" class="form-control">
            <span class="text-danger" asp-validation-for="CreatedDate"></span>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control">
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="Priority" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Priority" asp-items="Html.GetEnumSelectList<Severity>()" class="form-control"></select>
            <span class="text-danger" asp-validation-for="Priority"></span>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="DepartmentId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="DepartmentId" asp-items="departments " class="form-control"></select>
            <span class="text-danger" asp-validation-for="DepartmentId"></span>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="DevelopersIds" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="DevelopersIds" asp-items="developers " class="form-control"></select>
            <span class="text-danger" asp-validation-for="DevelopersIds"></span>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label asp-for="IsClosed" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="IsClosed" asp-items="departments " class="form-check">
        </div>
    </div>
    <div class="form-group row mb-3">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="/Tickets" class="btn btn-warning">Cancel</a>
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}