@using Tickets.BL;
@model TicketDetailsVM;


@{
    var status = Model.IsClosed ? "Closed" : "Open";
}
<div class="card">
    <div class="card-header text-center fw-bold ">
        <p class="text-decoration-underline">View Ticket Details</p>
        <p>@Model.Id</p>
    </div>
    <div class="card-body">
        <h5 class="card-title">@Model.Department.Name</h5>
        <p class="card-text">@Model.Description</p>
        <p class="card-text">@Model.CreatedDate</p>
        <p class="card-text">@status</p>
        <p class="card-text">@Model.Priority</p>
        <ul>
            @foreach(var d in Model.Developers)
            {
                <li>@d.FirstName @d.LastName</li>
            }
        </ul>
        <div class="text-center">
            <a href="/Tickets/" class="btn btn-primary">Back To Tickets</a>
            <a href="/Departments/Details/@Model.Department.Id" class="btn btn-primary">Back To Departments</a>
        </div>
    </div>
</div>


