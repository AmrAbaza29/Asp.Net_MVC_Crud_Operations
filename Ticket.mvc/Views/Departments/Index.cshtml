@using Tickets.BL;


@model IEnumerable<DepartmentReadVM>;

@{
    var operation = TempData[Constants.Operation] as string;
}
<h2 class="text-center bg-success bg-opacity-15 p-4 mb-5 rounded-3">Departments</h2>
<h3 class="w-100 text-center btn btn-outline-primary">
    <a href="/Departments/Add" class="text-decoration-none text-black">Add Department</a>
</h3>

<table class="table table-hover table-striped text-center">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.Id</td>
                <td>@d.Name</td>
                <td>
                    <ul class="d-flex flex-wrap list-unstyled justify-content-around">
                        <li><a class="btn btn-primary" href="/Departments/Details/@d.Id">Details</a></li>
                        <li>
                            <form asp-action="Delete" asp-route-Id="@d.Id" method="post">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </li>
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (operation == Constants.Add)
{
    <div class="alert alert-success" role="alert">
        Added Successfully
    </div>
}

@if (operation == Constants.Delete)
{
    <div class="alert alert-danger" role="alert">
        Deleted Successfully
    </div>
}
